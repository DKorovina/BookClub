<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">


	<View
		android:id="@+id/_bg__book_note"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/_bg__book_note_shape"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ScrollView
		android:id="@+id/info_book"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/rectangle_1">

		<RelativeLayout
			android:id="@+id/content_container"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/rectangle_22"
				android:layout_width="match_parent"
				android:layout_height="123dp"
				android:layout_marginStart="15dp"
				android:layout_marginTop="15dp"
				android:layout_marginEnd="15dp"
				android:contentDescription="rectangle_22"
				android:src="@drawable/rectangle_22" />

			<View
				android:id="@+id/rectangle_23"
				android:layout_width="match_parent"
				android:layout_height="123dp"
				android:layout_marginStart="15dp"
				android:layout_marginTop="15dp"
				android:layout_marginEnd="15dp"
				android:alpha="0.5"
				android:background="@drawable/rectangle_23_shape" />

			<ImageView
				android:id="@+id/rectangle_22_ek1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignTop="@+id/rectangle_22"
				android:layout_marginStart="40dp"
				android:layout_marginTop="33dp"
				android:contentDescription="rectangle_22_ek1"
				android:src="@drawable/rectangle_22_ek1" />

			<TextView
				android:id="@+id/____________________"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignTop="@+id/rectangle_22"
				android:layout_marginStart="15dp"
				android:layout_marginTop="61dp"
				android:layout_toEndOf="@+id/rectangle_22_ek1"
				android:text="Шолох. Теневые блики"
				android:textColor="@color/rectangle_9_color"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/______________"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/____________________"
				android:layout_marginStart="15dp"
				android:layout_marginTop="9dp"
				android:layout_toEndOf="@+id/rectangle_22_ek1"
				android:text="Антонина Крейн"
				android:textColor="@color/rectangle_9_color"
				android:textSize="14sp" />

			<LinearLayout
				android:id="@+id/rang"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/rectangle_22"
				android:layout_marginStart="15dp"
				android:layout_marginTop="15dp"
				android:layout_marginEnd="15dp"
				android:layout_toEndOf="@+id/rectangle_22_ek1"
				android:orientation="vertical">

				<TextView
					android:id="@+id/ocenca"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Оценка:"
					android:textSize="14sp" />

				<RatingBar
					android:id="@+id/bookRatingBar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:numStars="5"
					android:rating="0"
					android:stepSize="1" />
			</LinearLayout>


			<LinearLayout
				android:id="@+id/slova"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/rang"
				android:layout_marginStart="15dp"
				android:layout_marginTop="15dp"
				android:layout_marginEnd="15dp"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/_3000__________"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="3000
Прочитало"
					android:textColor="@color/_bg________ek1_color"
					android:textSize="12sp" />

				<TextView
					android:id="@+id/_3000___________ek1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="3000
Планируют"
					android:textColor="@color/_bg________ek1_color"
					android:textSize="12sp" />

				<TextView
					android:id="@+id/_3000_________"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="3000
Рецензий"
					android:textColor="@color/_bg________ek1_color"
					android:textSize="12sp" />

				<TextView
					android:id="@+id/_3000______"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="3000
Цитат"
					android:textColor="@color/_bg________ek1_color"
					android:textSize="12sp" />

			</LinearLayout>

			<ImageView
				android:id="@+id/line_1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_below="@+id/slova"
				android:layout_marginTop="15dp"
				android:contentDescription="line_1"
				android:src="@drawable/line_1" />

			<TextView
				android:id="@+id/________________________"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/line_1"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="15dp"
				android:text="Информация об издании "
				android:textColor="@color/_________________________color"
				android:textSize="12sp" />

			<ImageView
				android:id="@+id/line_2"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_below="@+id/________________________"
				android:layout_marginTop="15dp"
				android:contentDescription="line_2"
				android:src="@drawable/line_2" />

			<TextView
				android:id="@+id/___________"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/line_2"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="15dp"
				android:text="Описание"
				android:textColor="@color/_________________________color"
				android:textSize="12sp" />

			<TextView
				android:id="@+id/_____________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________500_000________________________________________________________________________________________________________________________________________"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/___________"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="15dp"
				android:layout_marginEnd="15dp"
				android:text="Тинави живет в столице колдовства, но напрочь лишилась магии. Теперь на ее будущем можно поставить крест. Но в полнолуние она спасает странного мальчишку с амнезией, а следующим утром внезапно получает работу Ловчей — детектива по делам чужестранцев. В паре с магом Полынью Тинави предстоит отыскать убийцу, орудующего в самом сердце королевства — во дворце. Постепенно девушка убеждается, что на магии свет клином не сошелся. Только вот незадача: все ее новые знакомые — не те, кем кажутся на первый взгляд… Первая книга потрясающего цикла Антонины Крейн «Шолох». 500 000 прочтений в Сети. Фэнтези, детектив, огромная вселенная под одной обложкой. Тинави потеряла магию, но ее пр"
				android:textColor="@color/_bg________ek1_color"
				android:textSize="12sp" />

			<TextView
				android:id="@+id/_____________________"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/line_3"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="15dp"
				android:text="Полки "
				android:textColor="@color/_________________________color"
				android:textSize="12sp" />

			<ImageView
				android:id="@+id/line_3"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_below="@+id/_____________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________500_000________________________________________________________________________________________________________________________________________"
				android:layout_marginTop="15dp"
				android:contentDescription="line_3"
				android:src="@drawable/line_3" />

			<ImageView
				android:id="@+id/line_4"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_below="@+id/_____________________"
				android:layout_marginTop="15dp"
				android:contentDescription="line_4"
				android:src="@drawable/line_3" />

			<TextView
				android:id="@+id/citata"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/line_4"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="15dp"
				android:text="Цитаты "
				android:textColor="@color/_________________________color"
				android:textSize="12sp" />

			<ImageView
				android:id="@+id/line_5"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_below="@+id/citata"
				android:layout_marginTop="15dp"
				android:contentDescription="line_4"
				android:src="@drawable/line_3" />

			<TextView
				android:id="@+id/recnz"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/line_5"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="15dp"
				android:text="Цитаты "
				android:textColor="@color/_________________________color"
				android:textSize="12sp" />

			<ImageView
				android:id="@+id/line_6"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_below="@+id/recnz"
				android:layout_marginTop="15dp"
				android:contentDescription="line_4"
				android:src="@drawable/line_3" />

		</RelativeLayout>

	</ScrollView>

	<View
		android:id="@+id/rectangle_1"
		android:layout_width="match_parent"
		android:layout_height="68dp"
		android:background="@drawable/rectangle_1_shape"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/rectangle_26"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="15dp"
		android:layout_marginTop="10dp"
		android:background="@drawable/rectangle_16_shape"
		android:text="Добавить"
		android:textColor="@color/______ek2_color"
		android:textSize="14sp"
		app:layout_constraintStart_toStartOf="@+id/rectangle_1"
		app:layout_constraintTop_toTopOf="@+id/_bg__book_note" />

	<ImageView
		android:id="@+id/sozdaticon"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_marginTop="24dp"
		android:layout_marginEnd="60dp"
		android:src="@drawable/sozdat"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:id="@+id/rectangle_2"
		android:layout_width="match_parent"
		android:layout_height="68dp"
		android:background="@drawable/rectangle_2_shape"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>